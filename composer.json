{
    "name": "saritasa/transformers",
    "type": "library",
    "description": "Saritasa custom transformers on top of League/Fractal Library",
    "keywords": ["api", "fractal", "transformers"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey Populov",
            "email": "sergey@saritasa.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "illuminate/database": "5.*",
        "illuminate/support": "5.*",
        "league/fractal": "^0.17",
        "saritasa/php-common": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "prefer-stable" : true,
    "autoload": {
        "psr-4" : {
            "Saritasa\\Transformers\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "laravel": {
            "providers": [
                "Saritasa\\Transformers\\TransformersServiceProvider"
            ]
        }
    }
}
